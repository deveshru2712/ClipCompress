{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    /* Add these for root-level types folder */
    "typeRoots": [
      "./node_modules/@types",
      "./types" // Your custom types folder at root
    ],
    "rootDirs": [
      "./src",
      "./types" // Include both src and types as root directories
    ]
  },
  /* Include both src and types folders */
  "include": ["src/**/*", "types/**/*"]
}
